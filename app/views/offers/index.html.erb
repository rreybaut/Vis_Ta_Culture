<div class="container index-container">
  <h1> All the offers </h1>

  <ul>
    <% @offers.each do |offer|  %>
      <% if offer.city == "Buenos Aires" %>
        <% image = "buenos-aires.jpg" %>
        <% elsif offer.city == "Dublin"%>
        <% image = "dublin2.jpg" %>
        <% elsif offer.city == "Casablanca"%>
        <% image = "casablanca2.jpg" %>
        <% elsif offer.city == "Paris"%>
        <% image = "paris.jpg" %>
        <% elsif offer.city == "Dakar"%>
        <% image = "dakar.jpg" %>
        <% else %>
        <% image = "newyork.jpg" %>
      <% end %>
      <li>

        <%= link_to offer_path(offer) do %>
        <div class="card-trip">
          <%= image_tag image %>
          <div class="card-trip-infos">
            <div>
              <h2><%= offer.city %> - <%= offer.country %></h2>
            </div>
            <h2 class="card-trip-pricing">$<%= offer.price %></h2>
          </div>
        </div>
        <% end %>
      </li>
    <% end  %>
  </ul>
  <br>
  <%= link_to "Create an offer", new_offer_path  %>
</div>
